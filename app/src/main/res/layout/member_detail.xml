<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="member"
                type="com.ww.lp.base.data.TeamDetail"/>
    </data>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_1">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/img"
                            android:layout_width="@dimen/dp_128"
                            android:layout_height="@dimen/dp_128"
                            android:layout_alignParentLeft="true"
                            fresco:placeholderImage="@drawable/va_img_default"
                            fresco:actualImageUri="@{member.img}">

                    </com.facebook.drawee.view.SimpleDraweeView>

                    <LinearLayout
                            android:id="@+id/username_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@id/img"
                            android:padding="10dp"
                            android:orientation="horizontal">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="姓名："/>

                        <TextView
                                android:id="@+id/username"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{member.username}"/>
                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/position_layout"
                            android:layout_below="@+id/username_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/img"
                            android:padding="10dp"
                            android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="职位："/>

                    <TextView
                            android:id="@+id/positon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{member.positon}"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_below="@+id/position_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/img"
                            android:padding="10dp"
                            android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="工作经验："/>
                    <TextView
                            android:id="@+id/yearNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/img"
                            android:text="@{member.yearNum}"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="年"/>
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人简介："/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{member.introduction}"/>
</LinearLayout>

        </LinearLayout>
    </ScrollView>
</layout>