<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="member"
                type="com.ww.lp.base.data.TeamDetail"/>
    </data>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_1">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/img"
                        android:layout_width="@dimen/dp_128"
                        android:layout_height="@dimen/dp_128"
                        android:layout_alignParentLeft="true"
                        fresco:placeholderImage="@color/primary"
                        fresco:actualImageUri="@{member.img}">

                </com.facebook.drawee.view.SimpleDraweeView>

                <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@id/img"
                        android:padding="10dp"
                        android:text="@{member.username}">

                </TextView>

                <TextView
                        android:id="@+id/positon"
                        android:layout_below="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_toRightOf="@id/img"
                        android:text="@{member.positon}"/>
                <TextView
                        android:id="@+id/yearNum"
                        android:layout_below="@+id/positon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_toRightOf="@id/img"
                        android:text="@{member.yearNum}">

                </TextView>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{member.introduction}"/>
    </LinearLayout>
</layout>